
class Solution
{ 
    public static int findSum(int A[],int N) 
    {
        int max = Integer.MIN_VALUE;
        int min = Integer.MAX_VALUE;
        int sum =0;
        for(int i=0; i<N; i++){
            if(max<A[i]){
                max=A[i];
            }
            if(min>A[i]){
                min=A[i];
            }
        }
    sum = max+min;
    return sum;
    }
}
